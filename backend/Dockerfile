FROM denoland/deno:alpine-2.6.8

WORKDIR /app

# Dependency lockfile (generated by Deno 2).
COPY deno.lock ./deno.lock

# Deno 2 lockfiles may include "workspace" entries derived from package.json.
# Copy it to keep --frozen lock validation consistent in container builds.
COPY package.json ./package.json

# Copy only what the backend needs.
COPY backend ./backend
COPY supabase/functions ./supabase/functions

# Pre-cache remote imports so runtime doesn't need deno.land access.
RUN deno cache --lock=deno.lock --frozen backend/server.ts

ENV PORT=8000
EXPOSE 8000

CMD ["run", "--allow-net", "--allow-env", "--lock=deno.lock", "--frozen", "backend/server.ts"]
